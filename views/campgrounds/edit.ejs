<% include ../partials/header %>
<div class="text-center">
    
    
<h1>Edit <%= editCampground.name %></h1>


<form action="/campgrounds/<%=editCampground._id %>?_method=PUT" method="POST" style="width:30%;" class=" ml-auto mr-auto">
    
    <div class ="form-group">
        <input class="form-control" type="text" name="editCG[name]" value=" <%= editCampground.name %>">

    </div>
    
     <div class ="form-group">
        <input class="form-control" type="number" name="editCG[price]" value=" <%= editCampground.price %>" min="0.01" step="0.01">

    </div>
   
    <div class ="form-group">
        <input class="form-control" type="text" name="editCG[img]" value=" <%= editCampground.img %>">

    </div>
    <div class ="form-group">
        <input class="form-control" type="text" name="editCG[description]" value=" <%= editCampground.description %>">

    </div>

    <div class ="form-group">
        <input class="btn btn-danger btn-block" type="submit">

    </div>

</form>
 <a href="/campgrounds">Go Back to Campgrounds</a>
</div>

<% include ../partials/footer %>



